            android:id="@+id/anim1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/maths_anim2"/>



